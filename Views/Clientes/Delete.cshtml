@model PhoneBook_DrinkCompany.Models.Clientes

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h3>Tem certeza que deseja apagar os dados desse cliente?</h3>
<h6>As ações não poderão ser desfeitas.</h6>
<div>
    <br />
    <br />
    <h4>Cliente: &nbsp; @Html.DisplayFor(model => model.Nome)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            e-Mail:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            CPF:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            CNPJ:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpnj)
        </dd>

        <dt class="col-sm-2">
            Tel. Celular: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelefoneCelular)
        </dd>
        <dt class="col-sm-2">
           Tel. Residencial: 
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelefoneResidencial)
        </dd>
        <dt class="col-sm-2">
            Tel. Comercial:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelefoneComercial)
        </dd>
        <dt class="col-sm-2">
            Endereço:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ClienteId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar à lista</a>
    </form>
</div>
