@model PhoneBook_DrinkCompany.Models.Clientes

@{
    ViewData["Title"] = "Dados - Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>

    <h4>Cliente: &nbsp; @Html.DisplayFor(model => model.Nome)</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            CPF
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
        <dt class="col-sm-2">
            CNPJ
        </dt>
        <dd class="col-sm-10">
            @if (Model.Cpnj == null)
            {
                @Html.Raw("Cliente não jurídico.");
            }
            else
            {
                @Html.DisplayFor(model => model.Cpnj)
            }
        </dd>
        <dt class="col-sm-2">
            e-Mail
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            Celular
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelefoneCelular)
        </dd>
        <dt class="col-sm-2">
            Telefone Residencial
        </dt>
        <dd class="col-sm-10">
            @if (Model.TelefoneResidencial == null)
            {
                @Html.Raw("Nenhum telefone Residencial cadastrado.");
            }
            else
            {
                @Html.DisplayFor(model => model.TelefoneResidencial)
            }
        </dd>
        <dt class="col-sm-2">
            Telefone Comercial
        </dt>
        <dd class="col-sm-10">
            @if (Model.TelefoneComercial == null)
            {
                @Html.Raw("Nenhum telefone Comercial cadastrado.");
            }
            else
            {
                @Html.DisplayFor(model => model.TelefoneComercial)
            }
        </dd>
        <dt class="col-sm-2">
            Endereço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Endereco)
        </dd>
    </dl>
</div>
<div>
    
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ClienteId">Edit</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
