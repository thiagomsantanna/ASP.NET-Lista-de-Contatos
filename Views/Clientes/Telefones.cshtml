@model PhoneBook_DrinkCompany.Models.Clientes

@{
    ViewData["Title"] = "Telefones - Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div>
    <h4>Cliente: &nbsp; @Html.DisplayFor(model => model.Nome)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelefoneCelular)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelefoneCelular)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelefoneResidencial)
        </dt>
        <dd class="col-sm-10">
            @if (Model.TelefoneResidencial == null)
            {
                @Html.Raw("Nenhum telefone Residencial cadastrado.");
            }
            else
            {
                @Html.DisplayFor(model => model.TelefoneResidencial)
            }
        </dd>


        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TelefoneComercial)
        </dt>
        <dd class="col-sm-10">
            @if (Model.TelefoneComercial == null)
            {
                @Html.Raw("Nenhum telefone Comercial cadastrado.");
            }
            else
            {
                @Html.DisplayFor(model => model.TelefoneComercial)
            }
        </dd>

    </dl>
</div>
<div>
    
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ClienteId">Edit</a> |
    <a asp-action="Index">Voltar à lista</a>
</div>
